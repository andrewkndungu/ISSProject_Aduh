<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="70dp"
    android:paddingBottom="60dp"
    android:paddingLeft="48dp"
    android:paddingRight="48dp"
    android:background="@drawable/pp"
    tools:context="com.example.sonnie.issproject.Signup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
      >

        <TextView
            android:id="@+id/signup_welcome_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Kindly sign up"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="30sp"
            android:textAllCaps="true"/>

        <EditText
            android:id="@+id/signup_email_et"
            android:hint="Email address"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColorHint="#0e0e0e"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/signup_password_et"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Password"
            android:textColorHint="#0e0e0e"
            android:inputType="textPassword" />

        <CheckBox
            android:id="@+id/showpassword_checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show password"
            android:textSize="18sp"
            android:textColor="#0e0"
            android:layout_below="@+id/signup_password_et"/>

        <Button
            android:id="@+id/signup_button"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:textColor="#000000"
            android:textSize="22sp"
            android:text="SIGN UP" />

        <TextView
            android:id="@+id/login_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:textColor="#000000"
            android:textStyle="italic"
            android:textSize="18sp"
            android:text="Already registered? Sign in" />



    </LinearLayout>
</RelativeLayout>